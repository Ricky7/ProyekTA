{% extends 'SifoAdminBundle:Admin:adminlayout.html.twig' %}

{%block main%}
    <center>Ini halaman Data Admin!!</center>
    <p class="pull-center">
        <form class="well" id="form" method="POST" action="{{ path('daftar_admin') }}">
            <fieldset>
                <legend>Registration Form</legend>

                <label class="control-label">Username:</label>
                    <input type="text" id="username" name="username">
                <label class="control-label">Firstname:</label>
                    <input type="text" id="firstname" name="firstname">
                <label class="control-label">Password:</label>
                    <input type="text" id="password" name="password">
                <div align="center">
                    <br><button type="submit" class="btn btn-primary" >Tambah</button>
                </div>
            </fieldset>
        </form>
    </p>
{%endblock%}