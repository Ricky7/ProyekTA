{% extends "SifoAdminBundle::layout.html.twig" %}

{%block stylesheets%}
    <style type="text/css">
        .form-signin {
            max-width: 250px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 14px;
            height: auto;
            margin-bottom: 15px;
        }

        .page_header h5{
            color: #fff;
            font:normal 50px fontsatu;
        }

    </style>
{%endblock%}
{%block main%}
    
    {%if name is defined%}
        <h6><center><font color="Red">{{name}}</font></center></h6>
    {%endif%}
    <p class="pull-center">
    <form class="form-signin" method="POST" action="{{path('sifo_admin_homepage')}}">
        <input name="username" id="username" type="text" class="input-block-level" placeholder="Username">
        <input name="password" id="password" type="password" class="input-block-level" placeholder="Password">
        <label class="checbox">
            <input type="checkbox" name="remember" value="remember-me"> Remember me
        </label>
        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
        <br>
        <a href="{{ path('hwi_oauth_service_redirect', {service: 'facebook'}) }}">Login With Facebook</a>
    </form>
</p>

{%endblock%}

